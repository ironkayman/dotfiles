// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "inlines_completion_provider": "copilot"
  },
  "soft_wrap": "bounded",
  "preferred_line_length": 60,
  "hard_tabs": false,
  "tab_size": 2,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Atelier Cave Dark"
  },
  "base_keymap": "None",

  // LSP
  "auto_install_extensions": {
    "cspell": false
  },
  "languages": {
    "C++": {
      "language_servers": ["!cspell"]
    },
    "C": {
      "language_servers": ["!cspell"]
    },
    "Go": {
      "language_servers": ["!cspell"]
    },
    "Zig": {
      "language_servers": ["!cspell"]
    },
    "JSONC": {
      "language_servers": ["!cspell"]
    },
    "JavaScript": {
      "language_servers": [
        "!cspell",
        "typescript-language-server",
        "!vtsls"
      ]
    },
    "Python": {
      "language_servers": ["!cspell"]
    },
    "Markdown": {
      "language_servers": ["!cspell"]
    },
    "TypeScript": {
      "language_servers": [
        "typescript-language-server",
        "!vtsls",
        "!cspell"
      ]
    },
    "TSX": {
      "language_servers": [
        "typescript-language-server",
        "!vtsls",
        "!cspell"
      ]
    }
  }
}
